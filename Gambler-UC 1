package gambler.simulation;

public class Gambler {

	public static void main(String[] args) {
		int stake,bet,goal;
	
	for (i=0;i<200;i++)
	{
		int cash = stake;
		while (cash > 0 && cash < stake) {
			bets++;
			if (Math.random()<0.5)
			{
				cash++;
			}
			else
			{
				cash--;
			}
			if(cash == goal)
			{
				win++;
			}
		}
	}
		
